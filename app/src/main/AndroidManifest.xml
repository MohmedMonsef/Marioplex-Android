<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Spotify">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.IntroActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ActivitySetting"></activity>
        <activity android:name=".Activities.SettingActivity" />
        <activity android:name="com.example.Spotify.Activities.MainActivity"/>
        <activity android:name="com.example.Spotify.media.MediaPlayerActivity" />
        <activity android:name="com.example.Spotify.media.AddToPlaylistActivity" />
        <activity android:name="com.example.Spotify.media.CreatePlaylistActivity" />

        <service android:name="com.example.Spotify.media.MediaPlayerService" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>