<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingAlbumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/playlist_background"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/album_image_album_fragment_setting"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:src = "@drawable/ic_smile1"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/album_owner_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text=""
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/album_name_middle_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@android:color/background_light"
            android:text=""
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like_album_setting"
                    android:padding="16dp"
                    android:layout_toLeftOf="@id/album_settings_button"
                    android:src="@drawable/favorite_border"
                    android:layout_centerVertical="true"
                    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:textSize="20sp"
    android:textStyle="bold"
    android:layout_centerVertical="true"
    android:id="@+id/like_album_setting_text"
    android:layout_marginTop="8dp"
    android:textColor="@android:color/background_light"
    android:text="Like"
></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_artist"
                    android:padding="16dp"
                    android:layout_toLeftOf="@id/album_settings_button"
                    android:src="@drawable/ic_artist"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/view_artist_text"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/background_light"
                    android:text="View Artist"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like_album_all"
                    android:padding="16dp"
                    android:layout_toLeftOf="@id/album_settings_button"
                    android:src="@drawable/favorite_border"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/like_album_all_setting"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/background_light"
                    android:text="Liked all songs"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>