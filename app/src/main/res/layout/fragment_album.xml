<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ALBUM_FRAGMENT.album">

    <RelativeLayout
        android:background="@drawable/playlist_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alum_contents_layout"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/top_layout_album"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <ImageView
                android:id="@+id/back_arrow_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_button"/>
            <TextView
                android:id="@+id/album_name_album_fragment"
                android:text=""
                android:textColor="@android:color/background_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/album_settings_button"
                android:padding="16dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/more_options"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_album"
                android:padding="16dp"
                android:layout_toLeftOf="@id/album_settings_button"
                android:src="@drawable/favorite_border"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/album_image_album_fragment"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:src = "@drawable/ic_smile1"
                            android:layout_marginBottom="20dp"/>
                        <TextView
                            android:id="@+id/album_name_middle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_light"
                            android:text="album Name"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/album_owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:textSize="14dp"
                            android:textColor="@android:color/darker_gray"
                            android:text="Album by"
                            android:textAllCaps="true"
                            android:gravity="center"/>
                        <Button
                            android:id="@+id/shuffle_play_button_album"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button"
                            android:text="shuffle play"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            android:textSize="18dp"
                            android:textAllCaps="true"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/background_light"/>
                        <TextView
                            android:id="@+id/preview_text_album"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="preview"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:textSize="14dp"
                            android:layout_marginTop="32dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/background_light"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_album"
        android:text="Date "
        android:textColor="@android:color/background_light"
        android:padding="16dp"
        ></TextView>
    <RelativeLayout
        android:id="@+id/dowen_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/playlist_background"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:id="@+id/view_album_cardview"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            >

            <ImageView
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:id="@+id/artist_album_image"
                android:src="@drawable/ic_smile2"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                >
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/artist_album_name"
            android:text=""
            android:textColor="@android:color/background_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_album_cardview"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>