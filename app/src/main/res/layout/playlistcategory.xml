<LinearLayout android:layout_width="270dp"
    android:layout_height="270dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:id="@+id/layout_playlist_recycler"
        android:layout_margin="20dp"
        android:background="@color/bgBottomNavigation"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/LinearForImageplay"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/playlist_image1"
                android:layout_width="270dp"
                android:layout_height="160dp"
                android:background="@drawable/ic_smile2"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/NameOfPlaylist1"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/bgBottomNavigation"
                android:textColor="@color/TextColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/NameOfOwner1"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/bgBottomNavigation"
                android:textColor="@color/TextColor"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>