<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/see_all_item_layout1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/see_all_item_layout2"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="80dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp">
            <ImageView
                android:id="@+id/imgSeeAllitem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image"></ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/see_all_item_layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameOfSeeAll"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:drawableRight="@drawable/ic_go"
                android:textColor="@color/TextColor"
                android:textSize="24sp"
                android:textStyle="bold"

                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>