<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/sleep_timer"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/media_player_background_color"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/sleep_sheet_hider"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">
            <ImageView
                android:id="@+id/setting_image"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:visibility="invisible"
                android:background="@android:color/darker_gray"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_image"
                android:id="@+id/setting_song_name"
                android:text="Stop audio in"
                android:textSize="18dp"
                android:textColor="@android:color/background_light"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/five_minutes">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="5 minutes"
                    android:textStyle="bold"

                    android:id="@+id/five"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"

                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/ten_minutes">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="10 minutes"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/fifteen_minutes">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="15 minutes"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/thirty_minutes">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="30 minutes"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/fortyfive_inutes">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="45 minutes"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/hour">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="1 hour"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/turn_of_timer">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="Turn off timer"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/end_of_track">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/background_light"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:text="End of track"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>